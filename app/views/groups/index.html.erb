<h1>Groups</h1>
<%= link_to "Add Another Group", new_group_path %>

<% if @groups.length > 0 %>
<ul>
  <% @groups.each do |group| %>
    <li><%= link_to group.name, group %></li>
    <%= link_to "Edit", edit_group_path(group)%>
    <%= link_to "Delete", group, method: :delete %>
    <% end %>
</ul>
<% else %>
<p>You haven't created any groups yet!</p>
<% end %>