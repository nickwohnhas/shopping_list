<h1>Groups</h1>
<%= link_to "Add Another Group", new_group_path %>

<% if @groups.length > 0 %>
<ul>
  <% @groups.each do |group| %>
    <li><%= group.name %></li>
    <%= link_to "Edit #{group.name}", edit_group_path(group)%>
    <% end %>
</ul>
<% else %>
<p>You haven't created any groups yet!</p>
<% end %>